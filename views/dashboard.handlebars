<link rel="stylesheet" href="/css/dashboard.css" />

<h2 class="text-center">{{user.username}}</h2>

{{! Conteiner for blogs posted }}
<div class="container">
  <div class="blog-container">
    {{#each user.blog as |userBlog|}}
      <div class="blog-container">
        <div class="title">
          <p>{{userBlog.title}}</p>
        </div>
        <div class="date">
          <p>{{userBlog.date_created}}</p>
        </div>
      </div>
    {{/each}}
  </div>

  {{! Conteiner for making new blog }}
  <div class="make-blog-container make-blog-unactive">
    <form id="new-blog-form" data-types="{{user.id}}">
        <div class="title-container">
            <label for="title">Title:</label>
            <input
                type="text"
                class="form-control"
                placeholder="Enter your title here:"
                name="title"
                id="blog-title"
            />
            </div>
        <div class="content-container">
            <label for="content">Content:</label>
            <textarea
                type="text"
                class="form-control"
                placeholder="Enter your blog here:"
                name="content"
                id="blog-content"
            />
            </textarea>
        </div>
        <div class="submit-blog">
            <button class="btn btn-primary">Post Blog</button>
        </div>
    </form>
  </div>
  {{! new blog button }}
  <div class="new-blog">
    <button type="button" class="btn btn-primary" id="new-blog">New Blog</button>
  </div>

</div>

<script src="/js/dashboard.js"></script>